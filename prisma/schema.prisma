generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  role        String   @default("USER")
  permissions Json?    @default("{}")
  image       String?  // Foto de perfil
  firstName   String?
  lastName    String?
}

model Member {
  id           String        @id @default(uuid())
  name         String
  phone        String
  role         String        @default("Joven")
  createdAt    DateTime      @default(now())
  transactions Transaction[]
}

model Category {
  id           String          @id @default(uuid())
  name         String
  type         TransactionType
  transactions Transaction[]

  @@unique([name, type])
}

model Transaction {
  id          String          @id @default(uuid())
  type        TransactionType
  amount      Float
  date        DateTime
  description String
  categoryId  String
  memberId    String?
  eventId     String?
  createdAt   DateTime        @default(now())
  category    Category        @relation(fields: [categoryId], references: [id])
  event       Event?          @relation(fields: [eventId], references: [id])
  member      Member?         @relation(fields: [memberId], references: [id])
}

model Event {
  id           String        @id @default(uuid())
  name         String
  description  String?
  startDate    DateTime
  endDate      DateTime?
  createdAt    DateTime      @default(now())
  transactions Transaction[]
}

model Transfer {
  id          String   @id @default(uuid())
  amount      Float
  description String
  date        DateTime
  fromEventId String?
  toEventId   String?
  createdAt   DateTime @default(now())
}

model Settings {
  id                      String   @id @default("system-settings")
  churchName              String   @default("Finanzas Jóvenes")
  churchSubtitle          String   @default("Iglesia Central")
  currencySymbol          String   @default("RD$")
  logoUrl                 String   @default("/logo de los jovenes.jpeg")
  monthlyGoal             Float    @default(0)
  
  // Personalización Visual
  primaryColor            String   @default("#e85d26")
  themeMode               String   @default("system") // system, light, dark
  
  // Detalles para Reportes
  reportSignatureName     String   @default("")
  reportFooterText        String   @default("Dios les bendiga.")
  
  // Seguridad
  allowPublicRegistration Boolean  @default(true)
  
  // Finanzas Avanzadas
  generalFundName         String   @default("Caja General")
  lowBalanceAlert         Float    @default(1000)
  
  // Notificaciones
  webhookUrl              String   @default("")
  
  updatedAt               DateTime @updatedAt
}

enum TransactionType {
  income
  expense
}
