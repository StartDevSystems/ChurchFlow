generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  role        String   @default("USER")
  permissions Json?    @default("{}")
  image       String?  // Foto de perfil
  firstName   String?
  lastName    String?
}

model Member {
  id           String        @id @default(uuid())
  name         String
  phone        String
  email        String?       
  image        String?       
  role         String        @default("Joven")
  position     String?       @default("Miembro") // Nuevo: MÃºsico, Ujier, etc.
  status       String        @default("ACTIVO")  // Nuevo: ACTIVO, INACTIVO, OBSERVACION
  monthlyDue   Float         @default(0) 
  birthDate    DateTime?     
  createdAt    DateTime      @default(now())
  transactions Transaction[]
  attendances  Attendance[]
}

model Attendance {
  id        String   @id @default(uuid())
  memberId  String
  eventId   String?
  date      DateTime @default(now())
  member    Member   @relation(fields: [memberId], references: [id])
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String   @unique
  endpoint  String
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String
  userEmail   String
  action      String   // CREATE, UPDATE, DELETE, SYNC
  entity      String   // Transaction, Member, Event, Batch
  details     String   
  batchId     String?  // Nuevo: Para agrupar acciones
  metadata    Json?    // Nuevo: Para guardar IDs { "txIds": [...], "memIds": [...] }
  createdAt   DateTime @default(now())
}


model Category {
  id           String          @id @default(uuid())
  name         String
  type         TransactionType
  transactions Transaction[]

  @@unique([name, type])
}

model Transaction {
  id          String          @id @default(uuid())
  type        TransactionType
  amount      Float
  date        DateTime
  description String
  categoryId  String
  memberId    String?
  eventId     String?
  createdAt   DateTime        @default(now())
  category    Category        @relation(fields: [categoryId], references: [id])
  event       Event?          @relation(fields: [eventId], references: [id])
  member      Member?         @relation(fields: [memberId], references: [id])
}

model Event {
  id           String        @id @default(uuid())
  name         String
  description  String?
  startDate    DateTime
  endDate      DateTime?
  status       String        @default("ACTIVO") // ACTIVO, FINALIZADO
  createdAt    DateTime      @default(now())
  transactions Transaction[]
}

model Transfer {
  id          String   @id @default(uuid())
  amount      Float
  description String
  date        DateTime
  fromEventId String?
  toEventId   String?
  createdAt   DateTime @default(now())
}

model Settings {
  id                      String   @id @default("system-settings")
  churchName              String   @default("Finanzas JÃ³venes")
  churchSubtitle          String   @default("Iglesia Central")
  currencySymbol          String   @default("RD$")
  logoUrl                 String   @default("/icon-512.jpeg")
  monthlyGoal             Float    @default(0)
  
  // PersonalizaciÃ³n Visual
  primaryColor            String   @default("#e85d26")
  themeMode               String   @default("system") // system, light, dark
  buttonStyle             String   @default("solid")  // solid, outline
  
  // Detalles para Reportes
  reportSignatureName     String   @default("")
  reportFooterText        String   @default("Dios les bendiga.")
  signatureUrl            String?  // Nuevo: Imagen de la firma
  
  // Seguridad
  allowPublicRegistration Boolean  @default(true)
  
  // Finanzas Avanzadas
  generalFundName         String   @default("Caja General")
  lowBalanceAlert         Float    @default(1000)
  
  // Notificaciones
  webhookUrl              String   @default("")
  whatsappMessageTemplate String   @default("Hola {nombre}! ðŸ‘‹ Te escribo de la Iglesia para recordarte que para el mes de {mes} faltan {monto} de tu cuota. Â¡Dios te bendiga!")
  calculatorName          String   @default("Calculadora Bendecida")
  
  updatedAt               DateTime @updatedAt
}

enum TransactionType {
  income
  expense
}
